---
import { getCollection } from 'astro:content';
import Layout from '~/layouts/PageLayout.astro';

import { SITE } from '~/config/site/config.js';

const metadata = {
  title: `Upskilling Resources - ${SITE.title}`,
  description: 'Discover curated upskilling resources for bioinformaticians to grow your skills and career.',
};

const allResources = await getCollection('resources');
const featuredResources = allResources.filter((r) => r.data.featured);
const resourcesByCategory = {
  bioinformatics: allResources.filter((r) => r.data.category === 'bioinformatics'),
  biology: allResources.filter((r) => r.data.category === 'biology'),
  coding: allResources.filter((r) => r.data.category === 'coding'),
  'machine-learning': allResources.filter((r) => r.data.category === 'machine-learning'),
  math: allResources.filter((r) => r.data.category === 'math'),
  'professional-development': allResources.filter((r) => r.data.category === 'professional-development'),
};

const categoryColors = {
  bioinformatics: 'border-blue-500 dark:border-blue-400 bg-blue-50 dark:bg-gray-800',
  biology: 'border-green-500 dark:border-green-400 bg-green-50 dark:bg-gray-800',
  coding: 'border-purple-500 dark:border-purple-400 bg-purple-50 dark:bg-gray-800',
  'machine-learning': 'border-pink-500 dark:border-pink-400 bg-pink-50 dark:bg-gray-800',
  math: 'border-orange-500 dark:border-orange-400 bg-orange-50 dark:bg-gray-800',
  'professional-development': 'border-teal-500 dark:border-teal-400 bg-teal-50 dark:bg-gray-800',
};

const categoryHeaderColors = {
  bioinformatics: 'text-blue-600 dark:text-blue-400',
  biology: 'text-green-600 dark:text-green-400',
  coding: 'text-purple-600 dark:text-purple-400',
  'machine-learning': 'text-pink-600 dark:text-pink-400',
  math: 'text-orange-600 dark:text-orange-400',
  'professional-development': 'text-teal-600 dark:text-teal-400',
};

const categoryTagColors = {
  bioinformatics: 'bg-blue-200 dark:bg-gray-700 text-blue-800 dark:text-gray-300',
  biology: 'bg-green-200 dark:bg-gray-700 text-green-800 dark:text-gray-300',
  coding: 'bg-purple-200 dark:bg-gray-700 text-purple-800 dark:text-gray-300',
  'machine-learning': 'bg-pink-200 dark:bg-gray-700 text-pink-800 dark:text-gray-300',
  math: 'bg-orange-200 dark:bg-gray-700 text-orange-800 dark:text-gray-300',
  'professional-development': 'bg-teal-200 dark:bg-gray-700 text-teal-800 dark:text-gray-300',
};
---

<Layout metadata={metadata}>
  <!-- Header Section -->
  <section class="text-center pt-16 pb-8">
    <div class="container max-w-5xl mx-auto px-4">
      <h1 class="text-4xl sm:text-5xl font-bold mb-6 leading-tight text-gray-900 dark:text-white">
        Upskilling Resources
      </h1>

      <p class="text-lg sm:text-xl text-muted dark:text-slate-300 mb-8">
        Discover curated upskilling resources for bioinformaticians to grow your skills and career
      </p>
    </div>
  </section>

  {
    featuredResources.length > 0 && (
      <section class="py-8 px-4 max-w-5xl mx-auto">
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Featured Resources</h2>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {featuredResources.map((resource) => (
            <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow bg-white dark:bg-gray-800">
              <h3 class="text-xl font-semibold mb-3">
                <a
                  href={resource.data.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-primary dark:text-blue-400 hover:underline"
                >
                  {resource.data.title}
                </a>
              </h3>
              <p class="text-muted dark:text-slate-300">{resource.data.description}</p>
              {resource.data.tags && resource.data.tags.length > 0 && (
                <div class="mt-4 flex flex-wrap gap-2">
                  {resource.data.tags.map((tag) => (
                    <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      </section>
    )
  }

  <section class="py-8 px-4 max-w-5xl mx-auto">
    {
      Object.entries(resourcesByCategory).map(([category, resources]) =>
        resources.length > 0 ? (
          <div class="mb-10">
            <h2 class={`text-3xl font-semibold mb-4 ${categoryHeaderColors[category]}`}>
              {category.charAt(0).toUpperCase() + category.slice(1).replace(/-/g, ' ')}
            </h2>
            <div class="grid gap-4 md:grid-cols-2">
              {resources.map((resource) => (
                <a
                  href={resource.data.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`border-2 ${categoryColors[category]} rounded-lg p-5 hover:shadow-lg transition-all block cursor-pointer group`}
                >
                  <h4 class="text-lg font-semibold mb-2 text-gray-900 dark:text-white group-hover:underline">
                    {resource.data.title}
                  </h4>
                  <p class="text-sm text-muted dark:text-slate-300">{resource.data.description}</p>
                  {resource.data.tags && resource.data.tags.length > 0 && (
                    <div class="mt-3 flex flex-wrap gap-2">
                      {resource.data.tags.map((tag) => (
                        <span class={`text-xs px-2 py-1 ${categoryTagColors[category]} rounded`}>{tag}</span>
                      ))}
                    </div>
                  )}
                </a>
              ))}
            </div>
          </div>
        ) : null
      )
    }
  </section>
</Layout>
