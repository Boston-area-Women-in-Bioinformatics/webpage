---
import Layout from '~/layouts/PageLayout.astro';
import { SITE } from '~/config/site/config.js';
import SubmitQuestionForm from '~/components/widgets/SubmitQuestionForm.astro';

const metadata = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};

const releaseDate = new Date('2025-09-20T00:00:00Z');
const now = new Date();

const showAfterDate = now >= releaseDate;
const showBeforeDate = now < releaseDate;
---

<Layout metadata={metadata}>
  <!-- AMA Page Header-->
  <section class="text-center pt-16 pb-8">
    <div class="container max-w-1/3 mx-auto">
      <h1 class="text-4xl sm:text-5xl font-bold mb-4 mx-auto leading-tight">Ask Me Anything:</h1>
      <h2 class="text-3xl sm:text-4xl font-bold mb-4 mx-auto leading-tight">Boston Women in Bioinformatics</h2>

      <p class="text-lg sm:text-xl text-muted md:mb-6 dark:text-slate-300 max-w-5xl mx-auto text-center">
        Submit questions to a panel of women in bioinformatics. Whether you're a student just getting started, a
        researcher switching fields, or simply interested in learning more â€” we want to hear your questions!
      </p>
    </div>
  </section>

  <!-- Section to Submit Question -->
   <section>{showAfterDate && <SubmitQuestionForm />}</section>
  
    {showBeforeDate && (

      <div class="p-6 max-w-3xl mx-auto my-4 text-center bg-yellow-100 border border-yellow-300 rounded-lg">
        <h2 class="text-2xl font-semibold mb-4">Questions will be accepted starting September 20, 2025!</h2>
        <p class="text-base leading-relaxed">
          Come find us at the <u><a href="https://mitmuseum.mit.edu/more/cambridge-science-carnival">Cambridge Science Carnival</a></u>. We look forward to hearing from you!
        </p>
      </div>
    )
    }
</Layout>
