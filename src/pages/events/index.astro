---
import { SITE } from '~/config/site/config.js';
import Layout from '~/layouts/PageLayout.astro';
import EventsTable from '~/components/EventsTable.astro';

import Hero from '~/components/widgets/Hero.astro';
const metadata = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero>
    <Fragment slot="title"> Events </Fragment>

    <Fragment slot="subtitle">
      To subscribe to future events, check out
      <a
        href="https://lu.ma/bwib"
        class="inline-flex items-center ml-2 px-4 py-1 bg-gradient-to-r from-pink-500 via-yellow-500 to-green-500 hover:opacity-90 transition focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-base text-white text-center me-2 mb-2 dark:border-blue-500 dark:hover:bg-blue-500 dark:focus:ring-blue-800"
      >
        <span>Luma</span>
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14M12 5l7 7-7 7"></path>
        </svg>
      </a>
    </Fragment>
    <Fragment slot="content">
      <EventsTable />
    </Fragment>
  </Hero>
</Layout>
