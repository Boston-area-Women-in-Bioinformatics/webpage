---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';
import AddToCalendarButton from '~/components/AddToCalendarButton.tsx';
import CallToAction from '~/components/widgets/CallToAction.astro';
//import Image from '~/components/common/Image.astro';


const metadata = {
  title: '10 Year Anniversary',
};
---

<Layout metadata={metadata}>
  <section class="relative md:-mt-[76px] not-prose">
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
      <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
      <div class="py-12 md:py-20 lg:py-0 lg:flex lg:items-center lg:h-screen lg:gap-8">
        <div class="basis-1/2 text-center lg:text-left pb-10 md:pb-16 mx-auto">
          <p
            class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter"
            set:html="Celebration"
          />
          <h1
            class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200 intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter"
            set:html={'Boston Women in Bioinformatics 10 Year Anniversary Event'}
          />
          <div class="max-w-3xl mx-auto lg:max-w-none">
            <p
              class="text-xl text-muted mb-6 dark:text-slate-300 intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter"
              set:html="Join us in celebrating 10 years of community"
            />
          </div>
          <div class="text-lg mb-6">
            <span class="text-muted">
              <p>Date: Sept 23, 2025 @ 4PM ET</p>
              <p>Location: Boynton Yards, Somverville, MA</p>
            </span>
          </div>
          <p class="mb-1 m-auto lg:items-center">
            <AddToCalendarButton
              client:only="react"
              name="Boston Women in Bioinformatics 10 Year Anniversary"
              location="Boynton Yards, Somverville, MA"
              startDate="2025-09-23"
              endDate="2025-09-23"
              startTime="16:00"
              endTime="18:00"
            />
          </p>
        </div>
        <div class="basis-1/2">
          <div
            class="relative m-auto max-w-5xl intersect-once intercept-no-queue motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter"
          >
            <Image
              src={'/photos/scott-warman-rrYF1RfotSM-unsplash.jpg'}
              alt="Celebration cheer"
              class="mx-auto rounded-md w-full"
              widths={[400, 768, 1024, 2040]}
              sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
              width="500"
              height="437"
              decoding="async"
              loading="lazy"
            />
          </div>
        </div>
      </div>
      <CallToAction actions={[
        {
          variant: 'primary',
          target: '_blank',
          text: 'Contact',
          href: 'https://www.linkedin.com/in/lpantano/',
          icon: 'tabler:brand-linkedin',
        },
      ]}>
      
      <Fragment slot="title">Want to Sponsor Us?</Fragment>
  
      <Fragment slot="subtitle">
        If you are interested in sponsoring this event, please contact Lorena Pantano on LinkedIn.
      </Fragment>
      </CallToAction>
    </div>

    
  </section>
</Layout>
