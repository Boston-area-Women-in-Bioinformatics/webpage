---
import Layout from '~/layouts/PageLayout.astro';
// import { Image } from 'astro:assets';
import AddToCalendarButton from '~/components/AddToCalendarButton.tsx';
import speakers from '~/config/components/tenyearannSpeakers';
import TeamWidget from '~/components/widgets/Team.jsx';
import SponsorSection from '~/components/Sponsors.jsx';
import { SITE } from '~/config/site/config.js';

//import Image from '~/components/common/Image.astro';

const metadata = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};

var speakerColCss = 'pb-8 grid gap-8 lg:gap-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4';

if (speakers?.enabled === true) {
  if (speakers.members.length === 1) {
    speakerColCss = 'pb-8 grid gap-8 lg:gap-16 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-1';
  } else if (speakers.members.length === 2) {
    speakerColCss = 'pb-8 grid gap-8 lg:gap-16 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-2';
  } else if (speakers.members.length === 3) {
    speakerColCss = 'pb-8 grid gap-8 lg:gap-16 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3';
  }
}
---

<Layout metadata={metadata}>
  <section>
    <h1
      class="text-4xl sm:text-5xl md:text-6xl font-bold leading-tighter tracking-tighter font-heading dark:text-gray-200 intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter text-center"
    >
      Boston Women in Bioinformatics
    </h1>
    <h2
      class="text-4xl sm:text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200 intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter text-center"
    >
      10th Year Anniversary Event
    </h2>
    <p
      class="text-xl text-muted mx-2 sm:mx-5 md:mx-10 md:mb-6 dark:text-slate-300 intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter text-center"
    >
      Join us for a career session of four experienced speakers who will explore the realities of building a career in
      life sciences and technology. They will share personal stories and practical insights on navigating career
      options, managing psychological pressures, pivoting into new directions, learning from failure, seizing
      opportunities, advocating for yourself, and overcoming workplace challenges.
    </p>

    <div class="text-center">
      <a
        href="https://givebutter.com/BWIB10YRS"
        class="inline-flex items-center justify-center my-8 px-8 py-4 rounded-full text-white drop-shadow-[0_2px_2px_rgba(0,0,0,0.6)] text-xl font-extrabold tracking-wide bg-gradient-to-r from-pink-500 via-amber-500 to-pink-500 shadow-lg shadow-pink-400/40 transition-all ease-in-out transform hover:scale-110 hover:rotate-1 hover:shadow-yellow-500/60 ring-4 ring-pink-300 dark:from-fuchsia-600 dark:via-amber-500 dark:to-fuchsia-600 dark:shadow-fuchsia-500/50 dark:ring-amber-500 dark:drop-shadow-[0_2px_2px_rgba(0,0,0,0.9)]"
      >
        🥳 Register Now! 🎉
      </a>

      <div class="mx-auto max-w-xs w-full mt-20">
        <!-- Light and Dark mode logos -->
        <div class="block dark:hidden">
          <img
            src="/photos/2025/WIB_10Year_whitebackground_bright_Logo3.png"
            alt="Women in Bioinformatics 10th Anniversary Eventlogo"
          />
        </div>
        <div class="hidden dark:block">
          <img
            src="/photos/2025/WIB_10Year_darkbackground_bright_Logo3.png"
            alt="Women in Bioinformatics 10th Anniversary Event logo"
          />
        </div>
      </div>
    </div>
    <div class="text-center pb-0 mx-auto">
      <!-- wrapped the location & calendar button next to each other -->
      <div class="grid sm:grid-cols-2 items-center justify-center">
        <div class="text-lg text-muted py-4 text-center sm:text-right mr-8">
          <p>Date: Sept 30, 2025 @ 4PM ET</p>
          <!-- <p>Date:Date: September, 2025</p> -->
          <p>Location: Boynton Yards, Somerville</p>
          <p class="font-semibold">Ticket Cost: $20.00</p>
        </div>
        <AddToCalendarButton
          client:only="react"
          name="Boston Women in Bioinformatics 10 Year Anniversary"
          location="Boynton Yards, Somerville"
          startDate="2025-09-30"
          endDate="2025-09-30"
          startTime="16:00"
          endTime="19:00"
        />
      </div>
    </div>
    <!-- Agenda Table -->

    <div class="min-h-screen flex flex-col items-center justify-center px-4 py-4">
      <h2 class="text-3xl font-bold mb-3">Agenda</h2>

      <div class="w-full max-w-xl overflow-x-auto">
        <table
          class="w-full text-left border border-gray-300 divide-y divide-gray-200 rounded-lg overflow-hidden shadow-md bg-white"
        >
          <thead class="bg-gray-100 font-semibold text-xl">
            <tr>
              <th class="px-4 py-3 text-right text-gray-700">Time</th>
              <th class="px-8 py-3 text-gray-700">Activity</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 text-lg text-gray-800">
            <tr>
              <td class="px-4 py-3 text-right">4:00 PM – 4:20 PM</td>
              <td class="px-8 py-3">Check in & Refreshments</td>
            </tr>
            <tr>
              <td class="px-4 py-3 text-right">4:20 PM – 4:30 PM</td>
              <td class="px-8 py-3">Welcoming Remarks</td>
            </tr>
            <tr>
              <td class="px-4 py-3 text-right">4:30 PM – 5:15 PM</td>
              <td class="px-8 py-3">Panel and Q&A</td>
            </tr>
            <tr>
              <td class="px-4 py-3 text-right">5:15 PM – 7:00 PM</td>
              <td class="px-8 py-3">Networking and Activities</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Keynote speakers -->
    <div>
      <div class="px-4 mx-auto max-w-screen-xl text-center lg:py-2 lg:px-6">
        <div class="mx-auto mb-8 max-w-screen-sm lg:mb-12">
          <h3
            class="mt-1 mb-1 sm:mt-0 text-3xl sm:text-4xl md:text-5xl tracking-tight font-extrabold text-gray-900 dark:text-white"
          >
            Keynote Speakers
          </h3>
        </div>
        <div class={speakerColCss}>
          <TeamWidget members={speakers.members} />
        </div>
      </div>
    </div>
    <!--Sponsors -->
    <SponsorSection />
    <!-- <div class="py-4 relative items-center max-w-7xl mx-auto px-4 sm:px-6">
      <div>
        <div
          class="relative md:m-auto md:max-w-5xl intersect-once intercept-no-queue motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter"
        >
          <Image
            src={'/photos/event.jpg'}
            alt="Celebration cheer"
            class="sm:mx-auto rounded-md w-full"
            widths={[400, 768, 1024, 2040]}
            sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
            width="500"
            height="437"
            decoding="async"
            loading="lazy"
          />
        </div>
      </div>
    </div> -->


    <!-- Email Sign-Up -->

    <div class="mb-8">
      <div
        class="mx-auto max-w-screen-md dark:border dark:border-slate-600 dark:shadow-none p-6 rounded-md shadow-xl text-center my-auto"
      >
        <div class="text-center mb-0 md:mb-0 md:mx-auto">
          <div class="mb-4 lg:mb-8">
            <h3
              class="font-bold font-heading leading-tighter mb-4 tracking-tighter text-3xl sm:text-4xl md:text-5xl text-heading"
            >
              Email Sign-Up
            </h3>
          </div>
          <form id="emailForm">
            <label>
              <p class="text-muted text-xl dark:text-slate-400 my-4">
                Don't want to miss out? Add your email here for updates:
              </p>
              <input
                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                id="userEmail"
                placeholder="Enter your email"
                required
              />
            </label>
            <button
              type="submit"
              class="text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800"
              >Submit</button
            >
          </form>
        </div>
      </div>
    </div>

    <script is:inline>
      const form = document.getElementById('emailForm');
      form.addEventListener('submit', function (e) {
        e.preventDefault();

        const email = document.getElementById('userEmail').value;
        const formUrl =
          'https://docs.google.com/forms/d/e/1FAIpQLSfHST0fzrRqZO8zqq73QZEJIeKiN-WIdnkav-iaLzXWREF_SQ/formResponse';
        const data = new FormData();

        data.append('entry.193147904', email);

        fetch(formUrl, {
          method: 'POST',
          mode: 'no-cors',
          body: data,
        })
          .then(() => {
            alert('Thanks! Your email was submitted.');
            form.reset();
          })
          .catch((err) => {
            console.error('Submission error:', err);
            alert('Oops! Something went wrong.');
          });
      });
    </script>
  </section>
  <!-- Sponsorship tiers -->
  <section class="bg-white dark:bg-gray-900 border">
    <div class="py-8 px-4 mx-auto text-center lg:py-16 lg:px-6">
      <div class="sponsorship-intro text-center mb-8 mt-2">
        <h3 class="mb-4 text-3xl sm:text-4xl md:text-5xl tracking-tight font-extrabold text-gray-900 dark:text-white">
          Become a Sponsor
        </h3>
        <br />
        <p class="text-lg">
          Support the 10-year anniversary of Boston Women in Bioinformatics. Explore sponsorship opportunities below!
        </p>
      </div>
      <div class="sponsorship-tiers mt-0">
        <div class="tier">
          <h3 class="text-2xl sm:text-3xl md:text-4xl">Tier 1: <span class="gold">Gold </span> RNA Sponsor</h3>
          <div class="contribution">
            <strong>Contribution Amount:</strong> $1,500
          </div>

          <h4>Benefits:</h4>
          <ul class="benefits">
            <li>
              🏆 <strong>Prominent Logo Placement:</strong> Sponsor's logo prominently displayed on all event marketing materials,
              including banners, flyers, and digital media.
            </li>
            <li>
              🎙️ <strong>Verbal Recognition:</strong> Priority mention as a "Gold Sponsor" during event opening and closing
              speeches.
            </li>
            <li>
              🏢 <strong>Booth Space:</strong> Complimentary booth space at the event for product display or promotional
              activity.
            </li>
            <li>
              🌐 <strong>Website Recognition:</strong> Featured logo and hyperlink on the event website homepage or sponsor
              page.
            </li>
            <li>
              📣 <strong>Social Media Shoutouts:</strong> Multiple mentions across the event's social media channels before,
              during, and after the event.
            </li>
            <li>
              🎟️ <strong>Complimentary Tickets:</strong>
              <span class="gold">Four</span> free tickets to the event for the sponsor's representatives or guests.
            </li>
          </ul>
        </div>

        <div class="tier">
          <h2>Tier 2: <span class="silver">Silver </span> DNA Sponsor</h2>
          <div class="contribution">
            <strong>Contribution Amount:</strong> $500
          </div>

          <h4>Benefits:</h4>
          <ul class="benefits">
            <li>
              🏆 <strong>Prominent Logo Placement:</strong> Sponsor's logo prominently displayed on all event marketing materials,
              including banners, flyers, and digital media.
            </li>
            <li>
              🎙️ <strong>Verbal Recognition:</strong> Priority mention as a "Silver Sponsor" during event opening and closing
              speeches.
            </li>
            <li>
              🌐 <strong>Website Recognition:</strong> Featured logo and hyperlink on the event website homepage or sponsor
              page.
            </li>
            <li>
              📣 <strong>Social Media Shoutouts:</strong> Multiple mentions across the event's social media channels before,
              during, and after the event.
            </li>
            <li>
              🎟️ <strong>Complimentary Tickets:</strong>
              <span class="silver">Two</span> free ticket to the event for the sponsor's representatives or guests.
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Styles -->
  </section>
</Layout>
