---
import Layout from '~/layouts/Layout.astro';
import { getHomePermalink } from '~/utils/permalinks';
import Image from '~/components/common/Image.astro';

const title = `Error 404`;
---

<Layout metadata={{ title }}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">Error</span>
          <span class="text-gray-900 dark:text-slate-100">404</span>
        </h2>
        <Image
          src={'/photos/goth_labtop_dark.png'}
          alt="Anthropomorphic laptop with a discontent, goth expression."
          class="hidden dark:block mb-6"
          decoding="async"
          loading="lazy"
        />
        <Image
          src={'/photos/goth_labtop_light.png'}
          alt="Anthropomorphic laptop with a discontent, goth expression."
          class="block dark:hidden mb-6"
          decoding="async"
          loading="lazy"
        />
        <p class="text-3xl font-semibold md:text-3xl text-gray-900 dark:text-slate-100">This page isn’t here.</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">Let’s go somewhere less disappointing</p>
        <a rel="noopener noreferrer" href={getHomePermalink()} class="btn ml-4">Back to homepage</a>
      </div>
    </div>
  </section>
</Layout>
