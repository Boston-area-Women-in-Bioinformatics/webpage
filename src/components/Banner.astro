---
// Banner component - Dismissable site-wide announcement banner
import { Icon } from 'astro-icon/components';
---

<div
  id="site-banner"
  class="relative isolate flex items-center gap-x-6 overflow-hidden bg-violet-100 dark:bg-slate-700 px-6 py-2 sm:mb-16 sm:px-3.5 sm:before:flex-1"
  data-banner
>
  <div
    class="absolute top-1/2 left-[max(-7rem,calc(50%-52rem))] -z-10 -translate-y-1/2 transform-gpu blur-2xl"
    aria-hidden="true"
  >
    <div
      class="aspect-577/310 w-144.25 bg-linear-to-r from-[#ff80b5] to-[#9089fc] opacity-30"
      style="clip-path: polygon(74.8% 41.9%, 97.2% 73.2%, 100% 34.9%, 92.5% 0.4%, 87.5% 0%, 75% 28.6%, 58.5% 54.6%, 50.1% 56.8%, 46.9% 44%, 48.3% 17.4%, 24.7% 53.9%, 0% 27.9%, 11.9% 74.2%, 24.9% 54.1%, 68.6% 100%, 74.8% 41.9%)"
    >
    </div>
  </div>
  <div
    class="absolute top-1/2 left-[max(45rem,calc(50%+8rem))] -z-10 -translate-y-1/2 transform-gpu blur-2xl"
    aria-hidden="true"
  >
    <div
      class="aspect-577/310 w-144.25 bg-linear-to-r from-[#ff80b5] to-[#9089fc] opacity-30"
      style="clip-path: polygon(74.8% 41.9%, 97.2% 73.2%, 100% 34.9%, 92.5% 0.4%, 87.5% 0%, 75% 28.6%, 58.5% 54.6%, 50.1% 56.8%, 46.9% 44%, 48.3% 17.4%, 24.7% 53.9%, 0% 27.9%, 11.9% 74.2%, 24.9% 54.1%, 68.6% 100%, 74.8% 41.9%)"
    >
    </div>
  </div>
  <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
    <p class="text-lg text-accent dark:text-white">
      <strong class="font-semibold">10th Year Anniversary</strong>
      <svg viewBox="0 0 2 2" class="mx-2 inline size-0.5 fill-current" aria-hidden="true">
        <circle cx="1" cy="1" r="1"></circle>
      </svg>
      Join us in celebrating on September 30th at Boynton Yards.
    </p>
    <a
      href="/events/tenyearanniversary"
      class="flex-none rounded-full bg-accent dark:bg-white px-3.5 py-1 text-sm font-semibold text-white dark:text-slate-900 shadow-xs hover:bg-gray-700 dark:hover:bg-slate-100 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900"
    >
      More information <span aria-hidden="true">&rarr;</span>
    </a>
  </div>
  <div class="flex flex-1 justify-end">
    <button type="button" class="-m-3 p-3 focus-visible:-outline-offset-4" data-banner-dismiss>
      <span class="sr-only">Dismiss</span>
      <Icon name="tabler:x" class="w-5 h-5 text-gray-900 dark:text-slate-100" />
    </button>
  </div>
</div>

<script>
  // Client-side script for banner dismiss functionality
  function initBanner() {
    const banner = document.querySelector('[data-banner]') as HTMLElement | null;
    const dismissButton = document.querySelector('[data-banner-dismiss]');

    if (!banner || !dismissButton) return;

    // Check if banner was previously dismissed
    const dismissed = localStorage.getItem('bannerDismissed');
    if (dismissed === 'true') {
      banner.style.display = 'none';
      return;
    }

    // Handle dismiss click
    dismissButton.addEventListener('click', () => {
      banner.style.display = 'none';
      localStorage.setItem('bannerDismissed', 'true');
    });
  }

  // Initialize on page load
  initBanner();

  // Re-initialize on view transitions (if using Astro view transitions)
  document.addEventListener('astro:page-load', initBanner);
</script>
