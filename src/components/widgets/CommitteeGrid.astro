---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';
import type { Committee } from '~/types/committee';

interface Props {
  title?: string;
  subtitle?: string;
  tagline?: string;
  committees: Committee[];
  id?: string;
  isDark?: boolean;
  classes?: Record<string, string>;
  bg?: string;
}

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  committees = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-5xl ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={(classes?.headline || {}) as Record<string, string>} />

  <div class="grid mx-auto gap-8 md:gap-y-12 sm:grid-cols-2">
    {committees.map((committee) => (
      <div class="intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade flex items-center justify-center">
        <button
          class="committee-card flex flex-row max-w-md w-full text-left p-4 rounded-lg border-2 border-transparent hover:border-primary hover:shadow-lg transition-all duration-200 cursor-pointer bg-transparent"
          data-committee-id={committee.id}
          aria-label={`View details for ${committee.title}`}
        >
          <div class="flex justify-center">
            {committee.icon && (
              <div class="text-white bg-primary rounded-full w-10 h-10 p-2 md:w-12 md:h-12 md:p-3 mr-4 rtl:ml-4 rtl:mr-0 flex items-center justify-center">
                <Icon name={committee.icon} class="w-6 h-6" />
              </div>
            )}
          </div>
          <div class="mt-0.5 flex-1">
            <h3 class="text-xl font-bold text-gray-900 dark:text-slate-100">
              {committee.title}
            </h3>
            <p class="mt-3 text-muted dark:text-slate-300">
              {committee.description}
            </p>
          </div>
        </button>
      </div>
    ))}
  </div>

  <!-- Modal for Committee Details -->
  <div id="committee-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 items-center justify-center p-4 hidden overflow-y-auto">
    <div class="bg-white dark:bg-slate-800 rounded-lg max-w-4xl w-full my-8 relative shadow-xl">
      <div class="sticky top-0 bg-white dark:bg-slate-800 rounded-t-lg z-10 flex justify-end p-4 border-b border-gray-200 dark:border-gray-700 shadow-sm">
        <button
          id="close-modal"
          class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 text-2xl font-bold w-10 h-10 flex items-center justify-center hover:bg-gray-100 dark:hover:bg-slate-700 rounded-full transition-colors"
          aria-label="Close modal"
        >
          &times;
        </button>
      </div>

      <div id="modal-content" class="p-8">
        <!-- Content will be dynamically inserted here -->
      </div>
    </div>
  </div>
</WidgetWrapper>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    // Store committee data in the DOM
    const committeesData = document.getElementById('committees-data');
    const committees = committeesData ? JSON.parse(committeesData.textContent || '[]') : [];

    const modal = document.getElementById('committee-modal');
    const modalContent = document.getElementById('modal-content');
    const closeModal = document.getElementById('close-modal');

    // Close modal function
    function closeModalFn() {
      if (modal) {
        modal.classList.add('hidden');
        modal.style.display = 'none';
      }
      document.body.style.overflow = '';
    }

    function showCommitteeDetails(committee) {
      if (!modalContent) return;

      modalContent.innerHTML = `
        <div class="space-y-6">
          <!-- Header -->
          <div class="border-b border-gray-200 dark:border-gray-700 pb-4">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-slate-100">${committee.title}</h2>
            <p class="mt-3 text-lg text-muted dark:text-slate-300">${committee.description}</p>
          </div>

          ${committee.fullDescription ? `
            <div class="space-y-3">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-slate-100">About</h3>
              <p class="text-muted dark:text-slate-300">${committee.fullDescription}</p>
            </div>
          ` : ''}

          <!-- Chairs Section -->
          ${committee.chairs && committee.chairs.length > 0 ? `
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-slate-100">Committee Chairs</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                ${committee.chairs.map((chair) => `
                  <div class="flex items-center space-x-4 p-4 bg-gray-50 dark:bg-slate-700 rounded-lg">
                    ${chair.photo ? `
                      <img src="${chair.photo}" alt="${chair.name}" class="w-16 h-16 rounded-full object-cover">
                    ` : `
                      <div class="w-16 h-16 rounded-full bg-primary flex items-center justify-center text-white text-xl font-bold">
                        ${chair.name.split(' ').map((n) => n[0]).join('')}
                      </div>
                    `}
                    <div>
                      <p class="font-semibold text-gray-900 dark:text-slate-100">${chair.name}</p>
                      ${chair.title ? `<p class="text-sm text-muted dark:text-slate-400">${chair.title}</p>` : ''}
                    </div>
                  </div>
                `).join('')}
              </div>
            </div>
          ` : ''}

          <!-- Members Section -->
          ${committee.members && committee.members.length > 0 ? `
            <div class="space-y-4">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-slate-100">Committee Members</h3>
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                ${committee.members.map((member) => `
                  <div class="text-center">
                    ${member.photo ? `
                      <img src="${member.photo}" alt="${member.name}" class="w-20 h-20 mx-auto rounded-full object-cover mb-2">
                    ` : `
                      <div class="w-20 h-20 mx-auto rounded-full bg-primary flex items-center justify-center text-white text-lg font-bold mb-2">
                        ${member.name.split(' ').map((n) => n[0]).join('')}
                      </div>
                    `}
                    <p class="text-sm font-medium text-gray-900 dark:text-slate-100">${member.name}</p>
                  </div>
                `).join('')}
              </div>
            </div>
          ` : ''}

          <!-- Back Button -->
          <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
            <button
              class="close-detail-btn px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition-colors duration-200 font-semibold"
            >
              Back to Committees
            </button>
          </div>
        </div>
      `;

      // Add click handler to the back button
      const backBtn = modalContent.querySelector('.close-detail-btn');
      backBtn?.addEventListener('click', closeModalFn);
    }

    // Add click handlers to all committee cards
    document.querySelectorAll('.committee-card').forEach((card) => {
      card.addEventListener('click', () => {
        const committeeId = card.getAttribute('data-committee-id');
        const committee = committees.find((c) => c.id === committeeId);

        if (committee && modalContent) {
          showCommitteeDetails(committee);
          if (modal) {
            modal.classList.remove('hidden');
            modal.style.display = 'flex';
            // Scroll modal to top when opening
            modal.scrollTop = 0;
          }
          document.body.style.overflow = 'hidden';
        }
      });
    });

    // Close modal handlers
    closeModal?.addEventListener('click', closeModalFn);

    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModalFn();
      }
    });

    // Escape key to close
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
        closeModalFn();
      }
    });
  });
</script>

<!-- Hidden data storage -->
<script is:inline id="committees-data" type="application/json" set:html={JSON.stringify(committees)}></script>
