---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style>
  :root {
    /* Typography */
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Brand Colors */
    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);
    --aw-color-accent-warm: #e36d1d; /* Orange from logo rainbow */

    /* Sponsorship Tier Colors */
    --aw-color-tier-gold: #d4af37;
    --aw-color-tier-silver: #a3a3a3;

    /* Social Media Brand Colors */
    --aw-color-social-linkedin: #0077b5;
    --aw-color-social-instagram: #e4405f;
    --aw-color-social-facebook: #39569c;
    --aw-color-social-twitter: #00acee;
    --aw-color-social-bluesky: #00acee;
    --aw-color-social-github: rgb(17 24 39);

    /* Semantic Colors */
    --aw-color-success: rgb(34 197 94);
    --aw-color-warning: rgb(251 146 60);
    --aw-color-error: #e74c3c;
    --aw-color-info: rgb(59 130 246);

    /* Text Colors */
    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-text-dark: #2c3e50;

    /* Background Colors */
    --aw-color-bg-page: rgb(255 255 255);
    --aw-color-bg-page-dark: rgb(6 8 32);

    /* Spacing Scale */
    --aw-spacing-section-sm: 2rem;
    --aw-spacing-section-md: 3rem;
    --aw-spacing-section-lg: 5rem;

    /* Shadows */
    --aw-shadow-card: 0 4px 12px rgba(0, 0, 0, 0.1);
    --aw-shadow-hover: 0 8px 24px rgba(0, 0, 0, 0.15);

    /* Border Radius */
    --aw-radius-card: 0.75rem;
    --aw-radius-button: 9999px;

    /* Borders */
    --aw-border-color: #ddd;
    --aw-border-color-accent: #3498db;

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    /* Typography (same as light mode) */
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Brand Colors (same as light mode) */
    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(255 0 255);
    --aw-color-accent: rgb(109 40 217);
    --aw-color-accent-warm: #84cc16; /* Lime green for dark mode - lime-500 */

    /* Sponsorship Tier Colors (same as light mode) */
    --aw-color-tier-gold: #d4af37;
    --aw-color-tier-silver: #a3a3a3;

    /* Social Media Brand Colors (same as light mode) */
    --aw-color-social-linkedin: #0077b5;
    --aw-color-social-instagram: #e4405f;
    --aw-color-social-facebook: #39569c;
    --aw-color-social-twitter: #00acee;
    --aw-color-social-bluesky: #00acee;
    --aw-color-social-github: rgb(203 213 225);

    /* Semantic Colors (same as light mode) */
    --aw-color-success: rgb(34 197 94);
    --aw-color-warning: rgb(251 146 60);
    --aw-color-error: #e74c3c;
    --aw-color-info: rgb(59 130 246);

    /* Text Colors (dark mode variants) */
    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-text-dark: rgb(203 213 225); /* slate-300 equivalent for dark mode */

    /* Background Colors (dark mode variants) */
    --aw-color-bg-page: rgb(6 8 32);

    /* Spacing, Shadows, Border Radius, Borders (same as light mode) */
    --aw-spacing-section-sm: 2rem;
    --aw-spacing-section-md: 3rem;
    --aw-spacing-section-lg: 5rem;
    --aw-shadow-card: 0 4px 12px rgba(0, 0, 0, 0.3);
    --aw-shadow-hover: 0 8px 24px rgba(0, 0, 0, 0.4);
    --aw-radius-card: 0.75rem;
    --aw-radius-button: 9999px;
    --aw-border-color: rgb(51 65 85); /* slate-700 */
    --aw-border-color-accent: rgb(59 130 246); /* blue-500 for dark mode */

    ::selection {
      background-color: black;
      color: snow;
    }

    /* Global text color improvements for dark mode */
    p {
      color: rgb(203 213 225); /* slate-300 - readable on dark backgrounds */
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      color: rgb(241 245 249); /* slate-100 - brighter for headings */
    }

    div,
    span {
      color: rgb(203 213 225); /* slate-300 - default readable color */
    }
  }
</style>
